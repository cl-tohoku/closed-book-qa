{
    "train_data_path": "work/dataset/wiki_sentence_blingfire_perplexity.json",
    "validation_data_path": "work/dataset/dev_question.json",
    "dataset_reader": {
        "type": "text_entity",
        "tokenizer": {
            "type": "transformer",
            "model_name": "bert-base-cased",
            "max_length": 64
        },
        "token_indexers": {
            "tokens": {
                "type": "transformer",
                "model_name": "bert-base-cased"
            }
        },
        "do_mask_entity_mentions": true,
        "mask_token": "[MASK]",
        "min_perplexity": 150
    },
    "validation_dataset_reader": {
        "type": "text_entity",
        "tokenizer": {
            "type": "transformer",
            "model_name": "bert-base-cased",
            "max_length": 512
        },
        "token_indexers": {
            "tokens": {
                "type": "transformer",
                "model_name": "bert-base-cased"
            }
        }
    },
    "vocabulary": {
        "directory_path": "work/vocab/vocabulary"
    },
    "model": {
        "type": "quizbowl_guesser",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "transformer",
                    "model_name": "bert-base-cased"
                }
            },
            "allow_unmatched_keys": true
        },
        "text_encoder": {
            "type": "transformer",
            "pooling_type": "first",
            "input_dim": 768,
            "output_dim": 768
        },
        "dropout_encodings": 0.1
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 128
    },
    "validation_iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam_w",
            "parameter_groups": [
                [["bias", "LayerNorm.weight"], {"weight_decay": 0.0}],
                [["entity_embedder"], {"lr": 2e-4}]
            ],
            "lr": 5e-5,
            "weight_decay": 0.01,
            "correct_bias": false
        },
        "learning_rate_scheduler": {
            "type": "slanted_triangular",
            "num_epochs": 10,
            "num_steps_per_epoch": 2809,
            "cut_frac": 0.2
        },
        "grad_norm": 1.0,
        "num_epochs": 10,
        "cuda_device": [0],
        "validation_metric": "+mrr",
        "num_serialized_models_to_keep": 1
    }
}
